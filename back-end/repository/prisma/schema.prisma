generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int            @id @default(autoincrement())
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  username           String
  email              String
  password           String
  signUpDate         DateTime
  role               String
  speedruns          Speedrun[]     @relation(name: "speedrunuser")
  validatedSpeedruns Speedrun[]     @relation(name: "speedrunvalidator")
  speedrunEvent      SpeedrunEvent? @relation(fields: [speedrunEventId], references: [id])
  speedrunEventId    Int?
}

model Speedrun {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  time          Int
  submitDate    DateTime @default(now())
  videoLink     String
  speedrunner   User     @relation(name: "speedrunuser", fields: [speedrunnerId], references: [id])
  speedrunnerId Int
  isValidated   Boolean
  validator     User?    @relation(name: "speedrunvalidator", fields: [validatorId], references: [id])
  validatorId   Int
  game          Game     @relation(fields: [gameId], references: [id])
  gameId        Int
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    Int
}

model SpeedrunEvent {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  startDate    DateTime
  endDate      DateTime
  participants User[]
}

model Game {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  genre       String
  description String
  releaseDate DateTime
  speedruns   Speedrun[]
  categories  Category[]
}

model Category {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  description String
  game        Game       @relation(fields: [gameId], references: [id])
  gameId      Int
  speedruns   Speedrun[]
}
